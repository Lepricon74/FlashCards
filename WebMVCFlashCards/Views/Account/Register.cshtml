@model WebMVCFlashCards.ViewModels.RegisterModel
<!DOCTYPE html>
<html>
<head>
	<title>Привет</title>
	<link href="https://fonts.googleapis.com/css?family=Russo+One&display=swap" rel="stylesheet">
	<link href="~/Site.css" type="text/css" rel="stylesheet" />
</head>
<body>
	<div class="form registration-form">
		<h2>Регистрация</h2>
		<hr/>
		<form class="register" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
			<div class="validation" asp-validation-summary="ModelOnly" />
			<div class="form-body">
				<section class="form-section">
					<label asp-for="Login">Введите логин</label>
					<input class="input-field" type="text" asp-for="Login" />
					<span asp-validation-for="Login"></span>
				</section>
				<section class="form-section">
					<label asp-for="Language">Выберите язык</label>
					<select class="input-field" type="text" asp-for="Language">						
						<option>English</option>
						<option>French</option>
					</select>					
					<span asp-validation-for="Login"></span>
				</section>
				<section class="form-section">
					<label asp-for="Password">Введите пароль</label>
					<input class="input-field" type="Password" asp-for="Password" />
					<span asp-validation-for="Password"></span>
				</section>
				<section class="form-section">
					<label asp-for="ConfirmPassword">Повторите пароль</label>
					<input class="input-field" type="Password" asp-for="ConfirmPassword" />
					<span asp-validation-for="ConfirmPassword"></span>
				</section>
				<section class="form-section">
					<input class="submit-button" type="submit" value="Регистрация" />
				</section>
			</div>
		</form>
	</div>
</body>
</html>