@model WebMVCFlashCards.ViewModels.LoginModel
<!DOCTYPE html>
<html>
<head>
	<title>Привет</title>
	<link href="https://fonts.googleapis.com/css?family=Russo+One&display=swap" rel="stylesheet">
	<link href="~/Site.css" type="text/css" rel="stylesheet" />
</head>
<body>
	<div class="form authorization-form">
		<h2>Вход на сайт</h2>
		<hr/>
		<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
			<div class="validation" asp-validation-summary="ModelOnly" />
			<div class="form-body">
				<section class="form-section">
					<label asp-for="Login">Введите логин</label>
					<input class="input-field" type="text" asp-for="Login" />
					<span asp-validation-for="Login" />
				</section>
				<section class="form-section">
					<label asp-for="Password">Введите пароль</label>
					<input class="input-field" type="password" asp-for="Password" />
					<span asp-validation-for="Password" />
				</section>
				<section class="form-section">
					<input class="submit-button" type="submit" value="Войти"/>
					<a class="registration-link" asp-action="Register" asp-controller="Account">Регистрация</a>
				</section>
			</div>
		</form>
	</div>
</body>
</html>